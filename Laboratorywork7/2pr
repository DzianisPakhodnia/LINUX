#!/bin/bash

# Запрос ввода имени пользователя через графический интерфейс
name=$(zenity --entry --title="Введите ваше имя" --text="Имя:")

# Запрос ввода профессии пользователя через графический интерфейс
profession=$(zenity --entry --title="Введите вашу профессию" --text="Профессия:")

# Вывод введенных значений через графический интерфейс
zenity --info --title="Информация" --text="Ваше имя: $name\nВаша профессия: $profession"

