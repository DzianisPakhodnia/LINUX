#!/bin/bash

# Список валют
currencies=("USD" "EUR" "BYN" "RUB" "exit")

# Функция для получения котировки валюты
get_rate() {
    case $1 in
        "USD") echo "1.00" ;;
        "EUR") echo "0.85" ;;
        "BYN") echo "3.22" ;;  # Примерная котировка белорусского рубля к доллару
        "RUB") echo "95.34" ;;  # Примерная котировка российского рубля к доллару
        "exit") exit 0 ;;
        *) echo "Неизвестная валюта" ;;
    esac
}

# Основной цикл
while true; do
    # Отображение списка валют
    choice=$(zenity --list --title="Выберите валюту" --column="Валюта" "${currencies[@]}")

    # Проверка выбора
    if [ "$choice" == "exit" ]; then
        break
    fi

    # Вывод котировки выбранной валюты
    rate=$(get_rate "$choice")
    zenity --info --text="Котировка $choice: $rate"
done

